root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.php]
indent_style = space
indent_size = 4

[*.{js,ts}]
indent_style = space
indent_size = 2

[*.{css,postcss,sass,less,scss}]
indent_style = space
indent_size = 4

[{package.json,composer.json}]
indent_style = space
indent_size = 2
