root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
indent_style = space

[*.php]
indent_size = 4

[*.{js,ts}]
indent_size = 2

[*.{css,postcss,sass,less,scss}]
indent_size = 4

[{package.json,composer.json}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
